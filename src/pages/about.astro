---
import Layout from '../layouts/Layout.astro';
import { config } from '../config';
---

<Layout title={`About - ${config.title}`} description="Learn more about John Engates">
	<section class="about-header">
		<h1>About</h1>
	</section>

	<section class="about-content">
		<div class="bio-section">
			<h2>Who I Am</h2>
			<p>{config.author.bio}</p>
		</div>

		<div class="contact-section">
			<h2>Connect With Me</h2>
			<ul class="social-links">
				{config.social.github && (
					<li><a href={config.social.github} target="_blank" rel="noopener">GitHub</a></li>
				)}
				{config.social.twitter && (
					<li><a href={config.social.twitter} target="_blank" rel="noopener">Twitter</a></li>
				)}
				{config.social.linkedin && (
					<li><a href={config.social.linkedin} target="_blank" rel="noopener">LinkedIn</a></li>
				)}
				{config.social.email && (
					<li><a href={`mailto:${config.social.email}`}>Email</a></li>
				)}
			</ul>
		</div>

		<div class="site-info">
			<h2>About This Site</h2>
			<p>This site is built with Astro and deployed on Cloudflare Workers, featuring the bold typography and minimal design inspired by the Volks Typo theme.</p>
			<p>I write about web development, cloud computing, and share my experiences in the tech industry.</p>
		</div>
	</section>
</Layout>

<style>
	.about-header {
		text-align: center;
		padding: calc(var(--grid-unit) * 6) 0;
		border-bottom: 4px solid var(--color-accent);
		margin-bottom: calc(var(--grid-unit) * 6);
	}

	.about-content {
		max-width: 800px;
		margin: 0 auto;
	}

	.bio-section,
	.contact-section,
	.site-info {
		margin-bottom: calc(var(--grid-unit) * 6);
	}

	.social-links {
		list-style: none;
		padding: 0;
		display: flex;
		flex-wrap: wrap;
		gap: calc(var(--grid-unit) * 3);
	}

	.social-links a {
		font-family: var(--font-heading-secondary);
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		padding: calc(var(--grid-unit)) calc(var(--grid-unit) * 2);
		border: 2px solid var(--color-border);
		display: inline-block;
		transition: all 0.2s ease;
	}

	.social-links a:hover {
		border-color: var(--color-accent);
		background-color: var(--color-accent);
		color: var(--color-background);
		text-decoration: none;
	}
</style>